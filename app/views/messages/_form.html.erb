<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="nameid" class="col-sm-2 control-label">名前:</label>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>
  
  <div class="form-group">
    <label for="contentid" class="col-sm-2 control-label">内容:</label>
    
    <div class="col-sm-8">
      <%= f.text_area :body, class: "form-control",size: "40x5", id: "contentid" %>
    </div>
    
  </div>
   
  <div class="form-group">
    <%= f.submit "送信", class: "btn btn-success col-sm-8 col-sm-offset-2" %>
  </div>

<% end %> 