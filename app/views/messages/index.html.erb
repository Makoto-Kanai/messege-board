<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
      <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
      <% end %>
  </div>
</div>


<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>

  
<div class="form-group">
    <label for="nameid" class="col-sm-2 control-label">名前:</label
    
  <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
    /div>
</div>

<div class="form-group">
       <label for="contentid" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
      		<%= f.text_area :body, class: "form-control", id: "contentid" %>
    </div>
</div>
 
<div class="form-group">
      <!--<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">-->
     <%= f.submit :送信, class: "btn btn-success btn-block" %>
</div>

<% end %> 


