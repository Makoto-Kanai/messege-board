
<!--ここからオリジナル-->

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      
      <br>
    <% end %>
  </div>
  
  # あとから追加
  
  <div class="container">
    <% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
    <% end %>
    
    <%= yield %>
  </div>
  
</div>

<%#部分テンプレートを読み込んでいる %>
<%= render 'form' %>



